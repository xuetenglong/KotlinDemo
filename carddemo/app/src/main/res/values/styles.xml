<resources>

  <!-- Base application theme.            AppBaseTheme -->
  <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
    <!-- Customize your theme here. -->
    <item name="colorPrimary">@color/colorPrimary</item>
    <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
    <item name="colorAccent">@color/app_main_color</item>
    <item name="android:textViewStyle">@style/AppTheme.Widget.TextView</item>
    <item name="android:buttonStyle">@style/AppTheme.Widget.Button</item>
    <item name="android:editTextStyle">@style/AppTheme.Widget.EditText</item>
  </style>

  <style name="AppTheme.Widget" />

  <style name="AppTheme.Widget.TextView" parent="android:Widget.Holo.Light.TextView">
    <item name="fontPath">fonts/cardvalue.ttf</item>
  </style>

  <style name="AppTheme.Widget.Button" parent="android:Widget.Holo.Light.Button">
    <item name="fontPath">fonts/cardvalue.ttf</item>
  </style>

  <style name="AppTheme.Widget.EditText" parent="android:Widget.Holo.Light.EditText">
    <item name="fontPath">fonts/cardvalue.ttf</item>
  </style>

  <style name="TextAppearance.FontPath" parent="android:TextAppearance">
    <!-- Custom Attr-->
    <item name="fontPath">fonts/cardvalue.ttf</item>
  </style>

  <style name="AppTheme.NoActionBar">
    <item name="windowActionBar">false</item>
    <item name="windowNoTitle">true</item>
  </style>

  <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

  <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

  <!--<style name="TransparentStatusBarTheme" parent="AppTheme.NoActionBar" />-->

  <style name="TransparentStatusBarTheme" parent="AppBaseTheme">
    <item name="android:textViewStyle">@style/AppTheme.Widget.TextView</item>
    <item name="android:buttonStyle">@style/AppTheme.Widget.Button</item>
    <item name="android:editTextStyle">@style/AppTheme.Widget.EditText</item>
  </style>

  <style name="AppTheme.NoActionBar1">
    <item name="windowActionBar">false</item>
    <item name="windowNoTitle">true</item>
  </style>

  <style name="AppTheme.Full" parent="AppTheme.NoActionBar">
    <item name="android:windowFullscreen">true</item>
  </style>

  <style name="SplashTheme" parent="@style/Theme.AppCompat.Light.NoActionBar">
    <item name="android:windowFullscreen">true</item>
    <item name="android:windowContentOverlay">@null</item>
    <item name="android:windowBackground">@mipmap/bg_splash_start</item>
  </style>

  <style name="lists_item_container">
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">62dp</item>
    <item name="android:background">@color/white</item>
    <item name="android:gravity">center_vertical</item>
    <item name="android:orientation">horizontal</item>
    <item name="android:paddingLeft">12dp</item>
    <item name="android:paddingRight">12dp</item>
  </style>

  <style name="lists_item_text">
    <item name="android:layout_width">wrap_content</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:background">@color/transparent</item>
    <item name="android:textColor">@color/lists_item_text_left</item>
    <item name="android:textSize">14sp</item>
    <item name="android:textColorHint">#B9B9B9</item>
    <item name="android:maxLines">1</item>
    <item name="android:ellipsize">end</item>
    <item name="android:textCursorDrawable">@drawable/shape_edittext_cursor_login</item>
  </style>

  <style name="lists_commit_button">
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">48dp</item>
    <item name="android:background">@drawable/selector_button_straight</item>
    <item name="android:textColor">@color/white</item>
    <item name="android:textSize">16sp</item>
  </style>

  <style name="login_16">
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">50dp</item>
    <item name="android:background">@color/white</item>
    <item name="android:drawablePadding">12dp</item>
    <item name="android:gravity">center_vertical</item>
    <item name="android:paddingLeft">16dp</item>
  </style>

  <!--线条的样式-->
  <style name="lines_dbdbdb">
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">0.5dp</item>
    <item name="android:background">#e5e5e5</item>
  </style>

  <style name="lines_dcdcdc">
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">0.5dp</item>
    <item name="android:background">#dcdcdc</item>
  </style>


  <!--线条的样式-->
  <style name="lines_dbdbdb_14">
    <item name="android:layout_marginRight">14dp</item>
    <item name="android:layout_marginLeft">14dp</item>
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">0.5dp</item>
    <item name="android:background">#e5e5e5</item>
  </style>

  <style name="lines_dbdbdb_12">
    <item name="android:layout_marginRight">12dp</item>
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">0.5dp</item>
    <item name="android:background">#e5e5e5</item>
  </style>

  <!--我的页面 店铺 红包  邀请-->
  <style name="user_title">
    <item name="android:layout_width">wrap_content</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:textColor">@color/my_shop</item>
    <item name="android:textSize">12dp</item>
    <item name="android:paddingBottom">2dp</item>
  </style>

  <!--我的页面 店铺 红包  邀请的个-->
  <style name="user_individ">
    <item name="android:layout_width">wrap_content</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:textColor">@color/ff9000</item>
    <item name="android:textSize">12dp</item>
    <item name="android:paddingBottom">3dp</item>
    <item name="android:paddingLeft">2dp</item>
  </style>

  <!--我的页面 店铺 红包  邀请的个数 3个-->
  <style name="user_num">
    <item name="android:layout_width">wrap_content</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:textColor">@color/ff9000</item>
    <item name="android:textSize">20dp</item>
  </style>

  <!--我的  店铺  分享-->
  <style name="user_list">
    <item name="android:paddingLeft">14dp</item>
    <item name="android:paddingRight">14dp</item>
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">45dp</item>
    <item name="android:gravity">center_vertical</item>
    <item name="android:drawablePadding">14dp</item>
    <item name="android:textColor">@color/text_vice</item>
    <item name="android:textSize">14dp</item>
  </style>

  <!--我的  店铺  分享  LinearLayout-->
  <style name="user_LinearLayout">
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">match_parent</item>
    <item name="android:orientation">vertical</item>
    <item name="android:gravity">center</item>
    <item name="android:layout_weight">1</item>
  </style>

  <style name="no_title" parent="@android:style/Theme.Light.NoTitleBar">
    <!-- 沉浸式状态栏 -->
    <item name="android:fitsSystemWindows">true</item>
    <item name="android:clipToPadding">false</item>
  </style>

  <style name="white_style18">
    <item name="android:textSize">18sp</item>
    <item name="android:textColor">@color/white</item>
    <item name="android:gravity">center</item>
  </style>

  <!--征信 支付宝  银行卡 左边的样式 -->
  <style name="public_text">
    <item name="android:layout_width">0dp</item>
    <item name="android:layout_height">match_parent</item>
    <item name="android:textColor">@color/text_vice</item>
    <item name="android:gravity">center_vertical</item>
    <item name="android:layout_weight">2.5</item>
    <item name="android:textSize">14sp</item>
  </style>

  <!--征信 支付宝  银行卡 右边的样式 -->
  <style name="public_text_right">
    <item name="android:textCursorDrawable">@drawable/shape_edittext_cursor_login</item>
    <item name="android:background">@null</item>
    <item name="android:layout_width">0dp</item>
    <item name="android:layout_height">match_parent</item>
    <item name="android:textColor">@color/text_vice</item>
    <item name="android:gravity">center_vertical</item>
    <item name="android:layout_weight">7.5</item>
    <item name="android:textColorHint">@color/b9b9b9</item>
    <item name="android:textSize">14sp</item>
  </style>

  <style name="title_12">
    <item name="android:textSize">12sp</item>
    <item name="android:textColor">#535353</item>
    <item name="android:background">@color/white</item>
  </style>

  <style name="umeng_socialize_shareboard_animation">
    <item name="android:windowEnterAnimation">@anim/umeng_socialize_shareboard_animation_in
    </item>
    <item name="android:windowExitAnimation">@anim/umeng_socialize_shareboard_animation_out
    </item>
  </style>

  <style name="dialog_style01" parent="@android:style/Theme.Dialog">
    <item name="android:windowFrame">@null</item>
    <!-- 边框 -->
    <item name="android:windowIsFloating">true</item>
    <!-- 是否浮现在activity之上 -->
    <item name="android:windowIsTranslucent">false</item>
    <!-- 半透明 -->
    <item name="android:windowNoTitle">false</item>
    <!-- 无标题 -->
    <item name="android:windowBackground">@null</item>
    <item name="android:backgroundDimEnabled">false</item>
  </style>

  <!--<item name="android:windowAnimationStyle">@style/AnimHead</item>
    <item name="android:windowFullscreen">true</item>-->
  <style name="ImageScale" parent="Theme.AppCompat.Light.NoActionBar">
    <item name="android:windowNoTitle">true</item>
    <item name="android:windowAnimationStyle">@style/AnimHead</item>
    <item name="android:windowFullscreen">false</item>
    <item name="android:windowFrame">@null</item>
    <item name="android:windowIsFloating">false</item>
    <item name="android:windowIsTranslucent">true</item>
    <item name="android:windowBackground">@android:color/black</item>
    <item name="android:backgroundDimEnabled">false</item>
  </style>

  <style name="AnimHead" parent="@android:style/Animation">
    <item name="android:windowEnterAnimation">@anim/head_in</item>
    <item name="android:windowExitAnimation">@anim/head_out</item>
  </style>

  <style mce_bogus="1" name="AnimationActivity" parent="@android:style/Animation.Translucent">
    <item name="android:windowEnterAnimation">@null</item>
    <item name="android:windowExitAnimation">@null</item>
    <item name="android:activityOpenEnterAnimation">@anim/push_left_in</item>
    <item name="android:activityOpenExitAnimation">@anim/push_left_out</item>
    <item name="android:activityCloseEnterAnimation">@anim/push_right_in</item>
    <item name="android:activityCloseExitAnimation">@anim/push_right_out</item>
  </style>

  <style name="AppBaseTheme" parent="Theme.AppCompat.Light.NoActionBar">
    <item name="android:windowContentOverlay">@null</item>
    <item name="android:windowAnimationStyle">@style/AnimationActivity</item>
    <item name="android:windowIsTranslucent">true</item>
  </style>

  <!-- Base application theme. -->
