<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:background="@color/app_background"
  android:orientation="vertical">

  <include layout="@layout/title_bar_white" />

  <LinearLayout
    style="@style/lists_item_container"
    android:layout_height="50dp"
    android:layout_marginTop="10dp">

    <TextView
      style="@style/lists_item_text"
      android:text="@string/user_details_user_name" />

    <View
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_weight="1" />

    <TextView
      android:id="@+id/ll_user_details_name"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:ellipsize="end"
      android:maxLines="1"
      android:text="@string/forgot_pwd_code_null"
      android:textColor="#B9B9B9"
      android:textSize="14sp" />
  </LinearLayout>

  <View
    android:layout_width="match_parent"
    android:layout_height="0.5dp"
    android:background="#E5E5E5" />

  <LinearLayout
    style="@style/lists_item_container"
    android:layout_height="50dp">

    <TextView
      style="@style/lists_item_text"
      android:text="@string/user_details_user_phone" />

    <View
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_weight="1" />

    <TextView
      android:id="@+id/ll_user_details_phone"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:ellipsize="end"
      android:maxLines="1"
      android:text="@string/forgot_pwd_code_null"
      android:textColor="#B9B9B9"
      android:textSize="14sp" />
  </LinearLayout>

  <View
    android:layout_width="match_parent"
    android:layout_height="0.5dp"
    android:background="#E5E5E5" />

  <LinearLayout
    style="@style/lists_item_container"
    android:layout_height="50dp">

    <TextView
      style="@style/lists_item_text"
      android:text="@string/user_details_user_id" />

    <View
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_weight="1" />

    <TextView
      android:id="@+id/ll_user_details_id"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:ellipsize="end"
      android:maxLines="1"
      android:text="@string/forgot_pwd_code_null"
      android:textColor="#B9B9B9"
      android:textSize="14sp" />
  </LinearLayout>

  <View
    android:layout_width="match_parent"
    android:layout_height="0.5dp"
    android:background="#E5E5E5" />

  <LinearLayout
    android:id="@+id/ll_user_details_forgot_pwd"
    style="@style/lists_item_container"
    android:layout_height="50dp">

    <TextView
      style="@style/lists_item_text"
      android:text="@string/user_details_user_pwd" />

    <View
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_weight="1" />

    <ImageView
      android:layout_width="32dp"
      android:layout_height="match_parent"
      android:contentDescription="@string/user_details_name"
      android:scaleType="center"
      android:src="@mipmap/icon_more" />
  </LinearLayout>

  <View
    android:layout_width="match_parent"
    android:layout_height="0.5dp"
    android:layout_marginTop="10dp"
    android:background="#E5E5E5" />

  <Button
    android:id="@+id/btn_user_detail_logout"
    style="?android:attr/borderlessButtonStyle"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:background="@color/white"
    android:text="@string/user_details_user_logout"
    android:textColor="#FF4200"
    android:textSize="15sp" />

  <View
    android:layout_width="match_parent"
    android:layout_height="0.5dp"
    android:background="#E5E5E5" />
</LinearLayout>