<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  android:background="@color/transparent"
  android:orientation="vertical">

  <LinearLayout
    android:id="@+id/layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="26dp"
    android:orientation="vertical">


    <RelativeLayout
      android:layout_width="match_parent"
      android:layout_height="58dp">

      <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/dialog_radius_top"
        android:gravity="center"
        android:text="提交前，请完成银行卡绑定"
        android:textColor="#a1a1a1"
        android:textSize="13sp" />

      <ImageView
        android:id="@+id/iv_cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:paddingRight="8dp"
        android:src="@mipmap/ic_bg_cancel" />
    </RelativeLayout>

    <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="180dp"
      android:background="@drawable/dialog_radius_bottom"
      android:orientation="vertical">

      <RelativeLayout
        android:id="@+id/rl_credit"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <TextView
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_weight="1"
          android:layout_centerInParent="true"
          android:drawablePadding="14dp"
          android:drawableTop="@mipmap/icon_card"
          android:gravity="center_horizontal"
          android:text="银行卡验证"
          android:textColor="#7abb52"
          android:textSize="15sp" />
      </RelativeLayout>

    </LinearLayout>
  </LinearLayout>
</LinearLayout>