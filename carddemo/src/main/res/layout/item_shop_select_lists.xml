<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  android:orientation="vertical">

  <TextView
    android:id="@+id/tv_shop_select_item_tip"
    android:layout_width="wrap_content"
    android:layout_height="34dp"
    android:layout_marginLeft="14dp"
    android:layout_marginRight="14dp"
    android:gravity="center_vertical"
    android:text="@string/shop_select_item_lose_efficacy_hint"
    android:textColor="#ACACAC"
    android:textSize="13sp"
    android:visibility="gone" />

  <LinearLayout
    android:id="@+id/ll_shop_select_item_content"
    android:layout_width="match_parent"
    android:layout_height="72dp"
    android:paddingLeft="14dp"
    android:paddingRight="14dp"
    android:background="@color/white"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <ImageView
      android:id="@+id/iv_shop_select_item_current"
      android:layout_width="20dp"
      android:layout_height="20dp"
      android:contentDescription="@string/shop_select_name"
      android:scaleType="fitXY"
      android:src="@mipmap/icon_shop_select_ed"
      android:visibility="gone" />

    <LinearLayout
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_weight="1"
      android:layout_marginStart="6dp"
      android:layout_marginLeft="6dp"
      android:orientation="vertical">

      <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
          android:id="@+id/tv_shop_select_item_owner"
          android:layout_width="70dp"
          android:layout_height="wrap_content"
          android:ellipsize="end"
          android:maxLines="1"
          android:text="法定代表"
          android:textColor="#343434"
          android:textSize="15sp" />

        <TextView
          android:id="@+id/tv_shop_select_item_reg"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="营业注册号"
          android:textColor="#343434"
          android:textSize="15sp" />
      </LinearLayout>

      <TextView
        android:id="@+id/tv_shop_select_item_shop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="店铺名称"
        android:textColor="#7C7C7C"
        android:textSize="13sp" />
    </LinearLayout>

    <FrameLayout
      android:id="@+id/fl_shop_select_item_edit"
      android:layout_width="72dp"
      android:layout_height="match_parent"
      android:visibility="gone">

      <ImageView
        android:layout_width="21dp"
        android:layout_height="21dp"
        android:layout_gravity="center_vertical|end"
        android:contentDescription="@string/shop_select_name"
        android:src="@mipmap/icon_shop_select_edit" />
    </FrameLayout>

    <TextView
      android:id="@+id/tv_shop_select_item_lock"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:paddingTop="4dp"
      android:paddingBottom="4dp"
      android:paddingLeft="8dp"
      android:paddingRight="8dp"
      android:background="@drawable/shape_shop_select_lose_efficacy"
      android:text="@string/shop_select_item_lose_efficacy_icon"
      android:textColor="@color/white"
      android:textSize="12sp"
      android:visibility="gone" />
  </LinearLayout>

  <View
    android:layout_width="match_parent"
    android:layout_height="0.5dp"
    android:layout_marginLeft="14dp"
    android:layout_marginRight="14dp"
    android:background="#E7E7E7" />
</LinearLayout>