<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  android:orientation="vertical">

  <LinearLayout
    android:id="@+id/ll_pos_management_content"
    style="@style/lists_item_container">

    <TextView
      android:id="@+id/tv_pos_management_item_id"
      style="@style/lists_item_text"
      android:text="--"
      android:textColor="#282828" />

    <View
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_weight="1" />

    <TextView
      android:id="@+id/tv_pos_management_item_status"
      style="@style/lists_item_text"
      android:text="验证状态"
      android:textColor="#54C328" />

    <ImageView
      android:id="@+id/iv_pos_management_item_can_click"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginStart="4dp"
      android:layout_marginLeft="4dp"
      android:src="@mipmap/icon_more"
      android:visibility="invisible" />
  </LinearLayout>

  <View
    android:layout_width="match_parent"
    android:layout_height="0.5dp"
    android:layout_marginLeft="12dp"
    android:layout_marginRight="12dp"
    android:background="#E5E5E5" />
</LinearLayout>
